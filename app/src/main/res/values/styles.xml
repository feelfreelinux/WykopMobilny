<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/cardList</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/cardList</item>
        <item name="cardListColor">@color/cardList</item>
        <item name="cardViewColor">@color/cardView</item>
        <item name="spacerColor">@color/surveyBarColor</item>
        <item name="drawablesColor">@color/drawablesColor.Dark</item>
        <item name="cardViewSelected">@color/cardViewSelected</item>
        <item name="authorHeader_date_color">@color/authorHeader_date.Dark</item>
        <item name="MirkoButtonStyle">@style/MikroButton</item>
        <item name="colorControlNormal">@color/cardViewSelected.Dark</item>
        <item name="inputToolbarDrawables">@color/toolbarItemsColor</item>
        <item name="usersMessageColor">@color/usersMessageColor</item>
        <item name="usersMessageSubtextDirected">@color/authorHeader_date.Dark</item>
        <item name="lineColor">@color/lineColor</item>
        <item name="separatorColor">@color/separatorColor</item>
        <item name="expandImageGradient">@drawable/gradient_expand_image_light</item>
        <item name="shadowUpGradient">@drawable/gradient_separator_input_light</item>

        <item name="voteButtonStatelist">@drawable/button_vote_background_state_list</item>
        <item name="buttonStatelist">@drawable/button_background_state_list</item>
        <item name="cardviewStatelist">@drawable/cardview_background_statelist</item>
        <item name="notificationDrawable">@drawable/ic_tag_light</item>
        <item name="mailDrawable">@drawable/ic_mail_light</item>
        <item name="commentDrawable">@drawable/ic_comment_light</item>
        <item name="voteDrawable">@drawable/ic_plus_light</item>
        <item name="dotsDrawable">@drawable/ic_dots_light</item>
        <item name="replyDrawable">@drawable/ic_reply_light</item>
        <item name="sharebtnDrawable">@drawable/ic_sharebtn_light</item>
        <item name="favoriteDrawable">@drawable/ic_favorite_selected_light</item>
        <item name="favoriteOutlineDrawable">@drawable/ic_favorite_light</item>
        <item name="surveyBar">@drawable/survey_bar</item>
        <item name="surveyBarStroke">@drawable/survey_bar_stroke</item>

        <item name="markdownFormatQuote">@drawable/ic_format_quote</item>
        <item name="markdownFormatBold">@drawable/ic_format_bold</item>
        <item name="markdownFormatCode">@drawable/ic_format_code</item>
        <item name="markdownFormatItalic">@drawable/ic_format_italic</item>
        <item name="markdownInsertEmoticon">@drawable/ic_insert_emoticon</item>
        <item name="markdownInsertLink">@drawable/ic_insert_link</item>
        <item name="markdownInsertPhoto">@drawable/ic_insert_photo</item>
        <item name="markdownInsertSpoiler">@drawable/ic_insert_spoiler</item>
        <item name="markdownSend">@drawable/ic_send</item>

    </style>

    <style name="AppTheme.Dark" parent="Base.Theme.AppCompat">
        <item name="preferenceTheme">@style/DarkPreferencesTheme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/cardList.Dark</item>
        <item name="android:itemBackground">@color/cardList.Dark</item>
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
        <item name="colorAccent">@color/colorAccent.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardListColor">@color/cardList.Dark</item>
        <item name="cardViewColor">@color/cardView.Dark</item>
        <item name="spacerColor">@color/surveyBarColor.Dark</item>
        <item name="drawablesColor">@color/drawablesColor.Dark</item>
        <item name="cardViewSelected">@color/cardViewSelected.Dark</item>
        <item name="authorHeader_date_color">@color/authorHeader_date.Dark</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="MirkoButtonStyle">@style/MikroButton</item>
        <item name="colorControlNormal">@color/cardViewSelected.Dark</item>
        <item name="android:textColorHint">@color/hintColor.Dark</item>
        <item name="inputToolbarDrawables">@color/toolbarItemsColor.Dark</item>
        <item name="usersMessageColor">@color/usersMessageColor.Dark</item>
        <item name="usersMessageSubtextDirected">@color/usersMessageDirected.Dark</item>
        <item name="lineColor">@color/lineColor.Dark</item>
        <item name="separatorColor">@color/separatorColor.Dark</item>
        <item name="expandImageGradient">@drawable/gradient_expand_image</item>
        <item name="shadowUpGradient">@drawable/gradient_separator_input</item>

        <item name="voteButtonStatelist">@drawable/button_vote_background_state_list_dark</item>
        <item name="buttonStatelist">@drawable/button_background_state_list_dark</item>
        <item name="cardviewStatelist">@drawable/cardview_background_statelist_dark</item>
        <item name="notificationDrawable">@drawable/ic_tag</item>
        <item name="mailDrawable">@drawable/ic_mail</item>
        <item name="commentDrawable">@drawable/ic_comment</item>
        <item name="voteDrawable">@drawable/ic_plus</item>
        <item name="dotsDrawable">@drawable/ic_dots</item>
        <item name="replyDrawable">@drawable/ic_reply</item>
        <item name="sharebtnDrawable">@drawable/ic_sharebtn</item>
        <item name="favoriteDrawable">@drawable/ic_favorite_selected</item>
        <item name="favoriteOutlineDrawable">@drawable/ic_favorite</item>
        <item name="surveyBar">@drawable/survey_bar_dark</item>
        <item name="surveyBarStroke">@drawable/survey_bar_stroke_dark</item>

        <item name="markdownFormatQuote">@drawable/ic_format_quote_dark</item>
        <item name="markdownFormatBold">@drawable/ic_format_bold_dark</item>
        <item name="markdownFormatCode">@drawable/ic_format_code_dark</item>
        <item name="markdownFormatItalic">@drawable/ic_format_italic_dark</item>
        <item name="markdownInsertEmoticon">@drawable/ic_insert_emoticon_dark</item>
        <item name="markdownInsertLink">@drawable/ic_insert_link_dark</item>
        <item name="markdownInsertSpoiler">@drawable/ic_insert_spoiler_dark</item>
        <item name="markdownInsertPhoto">@drawable/ic_insert_photo_dark</item>
        <item name="markdownSend">@drawable/ic_send_dark</item>
    </style>

    <style name="AppTheme.Dark.NavigationView">
        <item name="android:listDivider">@color/navigationSeparator</item>
        <item name="android:textColorSecondary">@color/textColor.Dark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationDrawerNotificationItem">
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">0</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseCardView" parent="CardView">
        <item name="cardBackgroundColor">?attr/cardViewColor</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="EntryCardView" parent="BaseCardView">
        <item name="android:layout_marginRight">@dimen/cardview_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/cardview_margin_horizontal</item>
    </style>

    <style name="EntryCommentsCardView" parent="BaseCardView">
        <item name="android:layout_marginRight">@dimen/cardview_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/cardview_margin_horizontal</item>
    </style>

    <style name="EntryContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MikroButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:drawablePadding">@dimen/button_padding_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_background_deselected</item>
    </style>

    <style name="WykopImageView">
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="WykopImageViewExpand">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/expandImageGradient</item>
        <item name="android:text">@string/expand_image</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MarkdownButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">@dimen/markdown_item_size</item>
        <item name="android:layout_width">@dimen/markdown_item_size</item>
    </style>

    <style name="DarkPreferencesTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorControlNormal">@color/toolbarItemsColor.Dark</item>
    </style>

    <style name="CheckBoxStyle"  parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">?attr/spacerColor</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar.TitleText.Messages" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar.Subtitle.Messages" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
