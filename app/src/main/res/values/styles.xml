<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary.Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Light</item>
        <item name="colorAccent">@color/colorAccent.Light</item>
        <item name="cardListColor">@color/cardList.Light</item>
        <item name="cardViewColor">@color/cardView.Light</item>
        <item name="android:windowBackground">@color/cardList.Light</item>
        <item name="spacerColor">@color/spacerColor.Light</item>
        <item name="drawablesColor">@color/drawablesColor.Light</item>
        <item name="mikroblogControlsColor">@color/mikroblogControlsColor.Light</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/cardList.Dark</item>
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
        <item name="colorAccent">@color/colorAccent.Dark</item>
        <item name="cardListColor">@color/cardList.Dark</item>
        <item name="cardViewColor">@color/cardView.Dark</item>
        <item name="spacerColor">@color/spacerColor.Dark</item>
        <item name="drawablesColor">@color/drawablesColor.Dark</item>
        <item name="mikroblogControlsColor">@color/mikroblogControlsColor.Dark</item>
    </style>

</resources>
