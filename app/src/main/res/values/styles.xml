<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme.Dark" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/cardList.Dark</item>
        <item name="android:itemBackground">@color/cardList.Dark</item>
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
        <item name="colorAccent">@color/colorAccent.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardListColor">@color/cardList.Dark</item>
        <item name="cardViewColor">@color/cardView.Dark</item>
        <item name="spacerColor">@color/spacerColor.Dark</item>
        <item name="drawablesColor">@color/drawablesColor.Dark</item>
        <item name="mikroblogControlsColor">@color/mikroblogControlsColor.Dark</item>
        <item name="textColor">@color/textColor.Dark</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.NavigationView">
        <item name="android:listDivider">@color/navigationSeparator</item>
        <item name="android:textColorSecondary">@color/textColor.Dark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationDrawerNotificationItem">
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">0</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EntryCardView" parent="CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">?attr/cardViewColor</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">1dp</item>
    </style>

    <style name="WykopImageView">
        <item name="android:layout_height">200dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
