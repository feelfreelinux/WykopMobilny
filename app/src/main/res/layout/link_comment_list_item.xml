<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <io.github.feelfreelinux.wykopmobilny.ui.widgets.link.comment.LinkCommentWidget
        android:id="@+id/linkComment"
        style="@style/EntryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/hiddenRepliesView"
        style="@style/EntryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comment_section_left_margin">

        <TextView
            android:id="@+id/messageTextView"
            style="@style/EntryContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/voteButtonStatelist"/>

    </android.support.v7.widget.CardView>

</LinearLayout>