<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/monthYearTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="@dimen/bottomsheet_item_padding_horizontal"
        android:paddingEnd="@dimen/bottomsheet_item_padding_horizontal"
        android:paddingTop="@dimen/bottomsheet_item_padding_vertical"
        android:paddingBottom="@dimen/bottomsheet_item_padding_vertical">

        <TextView
            android:id="@+id/monthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottomsheet_item_title_text_size"
            android:layout_marginEnd="@dimen/bottomsheet_item_padding_horizontal"
            tools:text="StyczeÅ„"/>

        <TextView
            android:id="@+id/yearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottomsheet_item_title_text_size"
            tools:text="2016"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/bottomsheet_item_padding_vertical"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/monthPicker"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bottomsheet_item_padding_horizontal"
            android:descendantFocusability="blocksDescendants"/>

        <NumberPicker
            android:id="@+id/yearPicker"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bottomsheet_item_padding_horizontal"
            android:descendantFocusability="blocksDescendants"/>

    </LinearLayout>

</LinearLayout>